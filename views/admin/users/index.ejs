<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog Crud</title>
    <link rel="stylesheet" href="/css/newCategory.css">
    <link rel="stylesheet" href="/css/global.css">
</head>
<body>
    <%- include("../../partials/navbar.ejs") %>
    <div class="container">
        <h2>Usuários</h2>
        <a href="/admin/users/create">Cadastrar novo usuário</a>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user =>{ %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>