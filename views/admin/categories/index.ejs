<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog Crud</title>
    <link rel="stylesheet" href="/css/newCategory.css">
    <link rel="stylesheet" href="/css/global.css">
</head>
<body>
    <%- include("../../partials/navbar.ejs") %>
    <div class="container">
        <h2>Categorias</h2>
        <a href="/admin/categories/new">Criar nova categoria</a>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category =>{ %>
                    <tr>
                        <th><%= category.id %></th>
                        <th><%= category.title %></th>
                        <th><%= category.slug %></th>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>